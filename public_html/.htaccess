# Ativa o mecanismo de reescrita
RewriteEngine On

# Define a base da URL (ajuste conforme seu ambiente)
RewriteBase /sgbccni/public_html/

# ğŸ” Remove .php da URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]

# ğŸ”’ Redirecionamento amigÃ¡vel para logout
RewriteRule ^logout$ ../backend/controllers/auth/logout.php [L]

# ğŸ’¡ SeguranÃ§a opcional: bloquear acesso direto a arquivos sensÃ­veis
<FilesMatch "\.(env|sql|bak|ini|log|sh|md|yml|json)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# ğŸš« Evita listagem de diretÃ³rios
Options -Indexes

# âœ… Redireciona URLs nÃ£o encontradas para index.php (roteamento amigÃ¡vel)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]
