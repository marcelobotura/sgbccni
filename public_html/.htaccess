# Ativa o mecanismo de reescrita
RewriteEngine On

# Define a base da URL (ajuste conforme necess치rio)
RewriteBase /sgbccni/public_html/

# 游대 Remove .php da URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]

# 游 Redirecionamento amig치vel para logout
RewriteRule ^logout$ ../backend/controllers/auth/logout.php [L]

# 游눠 Seguran칞a opcional: bloquear acesso direto a arquivos sens칤veis
<FilesMatch "\.(env|sql|bak|ini|log|sh|md|yml|json)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Evita listagem de diret칩rios (caso o index n칚o exista)
Options -Indexes
